record(ai, "$(DEVICE):REF_PHASE$(REF)")
{
    field(DESC, "Phase for Reference $(REF)")
    field(DTYP, "asynFloat64")
    field(INP,  "@asyn($(PORT),0) ref_phase_$(REF)")
    field(PREC, "4")
    field(SCAN, "I/O Intr")
}


